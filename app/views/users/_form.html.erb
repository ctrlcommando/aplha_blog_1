<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, data: { turbo: false }, class: "shadow p-3 mb-3 bg-info rounded gap-6", local: true) do |f| %>
        <div class="form-group row mb-3">
          <%= f.label :username, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :email, class: "col-2 col-form=label text-light" %>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email" %>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :password, class: "col-2 col-form=label text-light" %>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>
          </div>
        </div>

        <div class="form-group d-flex justify-content-center">
          <%= f.submit "Sign up", class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    
      <div class="mb-3 d-flex justify-content-center">
        <%= link_to 'Back to articles listing', articles_path, class: "text-info align-center btn btn-secondary btn-sm" %>
      </div>
    </div>
  </div>
</div>